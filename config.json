  "target": [
    {
      "filepath": "${base}/ph/home.html",
      "url": "https://www.producthunt.com/"
    },
    {
      "vars": {
        "interval": [
          "daily",
          "weekly",
          "monthly"
        ],
        "language": [
          "javascript",
          "typescript",
          "python",
          "rust",
          "jupyter-notebook",
          "c",
