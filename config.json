          "swift",
          "ruby",
          "go",
          "shell",
          "solidity",
          "dart"
        ]
      },
      "filepath": "${base}/gh/trending/${interval}/${language}-trending.html",
      "url": "https://github.com/trending/${language}?since=${interval}"
    },
    {
      "vars": {
        "interval": [
          "daily",
          "weekly",
          "monthly"
        ]
      },
